 /*tu 0-767*/
@media (max-width: 767px) {

  .navbar-collapse{
	display: none;
    width: auto;
    height: 327px;
  }
  .navbar-nav{
	margin: 0;
    height: max-content;
    z-index: 999;
	width: 100%;
  }
  .navbar-toggle:active .navbar-collapse{display: block;}

  .mobile-menu .navbar-nav {
    margin-top: 0;
    margin-bottom: 0;
  }
  .navbar-toggle .icon-bar{
  	background-color:#0FF;
  }
  .navigation-menu {
    background-color: #858785;
    height: auto;
    margin-bottom: 0;
  }
  .navigation-menu .nav-menu {
    margin-top: 0;
  }
  .navigation-menu .mobile-menu {
    width: 100%;
	display: none;
  }
  button.navbar-toggle .collapsed:active .navigation-menu .mobile-menu{
	  display:inline-block;
	  }
  .mobile-menu {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
  }
  .mobile-menu .navbar-nav {
    margin-top: 0;
    margin-bottom: 0;
	display: block;
    height: 300px;
    background-color: aqua;
  }
  .top-link .topmenu-contact {
    float: left;
  }
  .box-news .news-content .news-block .image {
    max-height: 80px;
    height: auto;
  }
  .product-content .product-block.product-list .product-item-box .product-item {
    text-align: center;
  }
  .product-content .product-block.product-list .product-item-box .product-item .right-block .price-info {
    float: left;
  }
  .product-content .product-block.product-list .product-item-box .product-item .right-block .button_buy {
    float: right !important;
  }
  .adv .controls a {
    display: block !important;
  }
  .adv .controls a.prev {
    left: 15px;
  }
  .adv .controls a.next {
    right: 15px;
  }
  .controls a.prev {
    left: 10px !important;
  }
  .controls a.next {
    right: 10px !important;
  }
  .right {
    float: left;
    width: auto;
    height: auto;
    margin-bottom: 8px;
  }
  .box .box-list {
    background: #CCC;
    border-bottom: 4px solid #f6c60e;
    padding: 15px 9px;
    text-align: right;
    width: auto;
  }
  div.footer > div {
    float: inherit;
    margin-left: 10%;
	width:100%;
	height:auto;
  }
	
  div.footer ul {
    margin-bottom: 50px;
	margin-top: 10px;
  }
  div.list{width:260px;}
  div.col-lg-18.hidden-md-down{display:none;}
  .list .content-list {
    margin-bottom: 30px;
    margin-top: -10px;
    display: none;
  }
  div.list:hover .content-list{display:block;}
}


/*tu 768 - 991*/
@media (min-width: 768px) {
  .boxed-layout .wrapper {
    width: 770px;
  }
}
@media (max-width: 991px) {
  .footer-bottom {
    text-align: center !important;
  }
  .footer-bottom .box-social {
    display: none;
  }
  .slideshow-block2 {
    padding-left: 10px;
  }
  .adv .controls a {
    top: 16% !important;
  }
  .payment .payment-block .payment-step {
    margin-bottom: 15px;
  }
  .payment .payment-block .payment-step .step-preview {
    min-height: auto;
  }
  .header-content .header-right {
    text-align: center;
  }
  .box .box-list {
    background: #CCC;
    border-bottom: 4px solid #f6c60e;
    padding: 15px 9px;
    text-align: right;
    width: auto;
  }
  .header-content .header-right .cart {
    width: 100%;
    text-align: center;
  }
  .navigation-menu .menu-top .menu-cate {
    cursor: pointer;
  }
  .navigation-menu .menu-top .menu-cate .menu-cate-title {
    padding: 20px 15px;
  }
  .navigation-menu .menu-top .menu-cate ul.menu-cate-content {
    display: none;
    height: auto;
  }
  .navigation-menu .menu-top .menu-cate ul.menu-cate-content li a .arrow-menu .fa-chevron-right::before {
    content: "";
  }
  .navigation-menu .menu-top .menu-cate ul.menu-cate-content li .sub-menu {
    left: 10%;
    z-index: 9999;
    width: 80%;
  }
  .navigation-menu .menu-top .menu-cate:hover ul.menu-cate-content {
    display: block;
  }
  .navigation-menu .nav-menu {
    margin-bottom: 0;
  }
  .navigation-menu .nav-menu .mobile-menu ul li a {
    border-right: none;
    color: #fff;
  }
  .navigation-menu .nav-menu .navbar-header {
    width: 100%;
    float: left;
  }
  .navigation-menu .nav-menu .navbar-header .navbar-toggle {
    margin-right: 0;
  }
  .navigation-menu .nav-menu .navbar-header .navbar-toggle .icon-bar {
    background-color: #006fc0;
  }
  .slideshow-content {
    height: auto;
  }
  .navigation-menu .menu-top .menu-cate ul.menu-cate-content li a .arrow-menu .fa-chevron-right::before {
    content: "ï¸";
  }
  .box-news .news-content .news-block .image {
    max-height: 130px;
    height: auto;
  }
}


/*tu 992-1200*/
@media (min-width: 992px) {
  .boxed-layout .wrapper {
    width: 990px;
  }
}

@media (max-width: 1200px) {
  .navigation-menu .menu-cate .menu-cate-title {
    padding: 8px 15px;
  }
  .navigation-menu .menu-cate ul {
    height: 362px;
  }
  .navigation-menu .menu-cate ul li a {
    padding: 8px 0px 8px 14px;
  }
  .header-content .header-right .sale-policy {
    padding-left: 0;
  }
  .header-content .header-right .search .form-search .form-search-controls input {
    width: 200px;
  }
  .slideshow-content {
    height: 362px;
  }
}

/* >= 1200 */
@media (min-width: 1200px) {
  .boxed-layout .wrapper {
    width: 1190px;
  }
}